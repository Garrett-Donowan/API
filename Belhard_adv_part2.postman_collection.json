							"    pm.response.to.have.status(200);\r",
							"});\r",
							"\r",
							"var jsonObject = pm.response.json();\r",
							"const taskID = jsonObject.data.id;\r",
							"pm.collectionVariables.set(\"taskID\", taskID);\r",
							"\r",
							"const ownerId = jsonObject.data.owner.id;\r",
							"pm.collectionVariables.set(\"ownerId\", ownerId);\r",
							"\r",
							"const responsibleID = jsonObject.data.responsible.id;\r",
							"pm.collectionVariables.set(\"responsibleID\", responsibleID);\r",
							"\r",
							"pm.test(\"Name check\", function () {\r",
							"    pm.expect(jsonObject.data.name).to.eql(pm.variables.get(\"taskName\"));\r",
							"});\r",
							"\r",
							"pm.test(\"Responsible check\", function () {\r",
							"    pm.expect(responsibleID).to.eql(\"1000005\");\r",
							"});\r",
							"\r",
